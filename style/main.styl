*
  box-sizing: border-box

body
  display: flex
  flex-direction: column
  font-family: "MS Sans Serif", Chicago, monospace
  font-size: 14px
  margin: 0

body, html
  height: 100%

// Menus
no-select()
  user-select: none
  -moz-user-select: none
  -webkit-user-select: none
  -ms-user-select: none

ul.menu-options, ul.menu-bar, ul.menu
  no-select()

  background-color: lightgrey
  border-bottom: 1px solid rgba(0, 0, 0, 0.5)
  margin: 0

  > li
    list-style-type: none

    &.active
      background-color: blue
      color: white

    > label
      display: block
      padding: 0 0.25em
      white-space: nowrap

      > span.hotkey
        float: right
        margin-left: 1em

        &:empty
          margin-left: 0

    &[disabled]
      color: gray

      &.active
        background-color: rgba(0, 0, 0, 0.125)

ul.menu-options, ul.menu
  border-top: 1px solid rgba(255, 255, 255, 0.5)
  border-left: 1px solid rgba(255, 255, 255, 0.5)
  border-right: 1px solid rgba(0, 0, 0, 0.5)

  box-shadow: 2px 2px 1px rgba(0, 0, 0, 0.5)

  padding: 2px
  padding-bottom: 3px
  position: absolute

ul.menu-bar
  margin: 0
  padding: 0

  > li
    display: inline-block

  &.accelerator-active
    span.accelerator
      text-decoration: underline

ul.menu-options, ul.menu
  display: none

  &.active
    display: block

  // Submenu
  > li.menu
    position: relative

    > ul.menu-options, > ul.menu
      position: absolute
      left: 100%
      top: -3px
      margin-left: 1px

li.menu.active
  > ul.menu-options, > ul.menu
    background-color: lightgrey
    color: black
    display: block
