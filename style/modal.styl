#modal
  align-items: center
  background-color: rgba(0, 0, 0, 0.25)
  display: none
  justify-content: center
  position: absolute
  z-index: 10000
  top: 0
  width: 100%
  height: 100%

  &.active
    display: flex

  > *
    background-color: white
    border: 1px solid rgba(0, 0, 0, 0.5)
    box-shadow: 2px 2px 6px rgb(0, 0, 0, 0.5)
    max-width: 90%
    max-height: 90%

  > form
    display: block
    padding: 1em

    > h1
      font-size: 1.5em
      margin: 0

    > input, textarea
      display: block
      margin-bottom: 1em
      width: 100%

    > button
      margin-right: 1em
      &:last-child
        margin-right: 0
