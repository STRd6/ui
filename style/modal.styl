#modal
  align-items: center
  background-color: rgba(0, 0, 0, 0.25)
  display: none
  justify-content: center
  position: absolute
  z-index: 1000
  top: 0
  width: 100%
  height: 100%

  &.active
    display: flex

  > *
    background-color: white
    border: 1px solid rgba(0, 0, 0, 0.5)
    box-shadow: 2px 2px 6px rgb(0, 0, 0, 0.5)
    max-width: 90%
    max-height: 90%
