#modal
  background-color: rgba(0, 0, 0, 0.25)
  display: none
  position: absolute
  z-index: 9000
  top: 0
  width: 100%
  height: 100%

  &.active
    display: block

  > *
    background-color: white
    border: 1px solid rgba(0, 0, 0, 0.5)
    box-shadow: 2px 2px 6px rgb(0, 0, 0, 0.5)
    margin: auto
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    max-width: 90%
    max-height: 90%
