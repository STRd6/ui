window
  background-color: lightgrey
  border: 4px double black
  display: flex
  flex-direction: column
  position: absolute

  > header
    border-bottom: 1px solid black
    display: flex

    > close, > control
      display: inline-block
      flex: 0 0 auto
      width: 18px

    > title-bar
      background-color: #000080
      border-color: black
      border-style: solid
      border-width: 0 1px
      color: white
      display: inline-block
      flex: 1 1 auto
      padding: 2px
      text-align: center

  > content
    background-color: white
    min-height: 20px
    min-width: 20px
